@model TestTaskForIronWaterStudio.Models.Product
@{
    ViewBag.Title = "Редактирование продукта";
}

<form asp-action="ChangeProduct" asp-controller="home">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Наименование</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Цена</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" />
    </div>
</form>