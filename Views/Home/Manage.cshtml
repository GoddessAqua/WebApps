@model IEnumerable<TestTaskForIronWaterStudio.Models.Product>
@{
    ViewBag.Title = "Продукты";

}
<a asp-action="AddNewProduct">Создать новый продукт</a>
<table class="table">
    <tr><td>Номер</td><td>Наименование</td><td>Цена</td><td></td></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Id</td><td>@item.Name</td><td>@item.Price</td><td><a asp-action="ChangeProduct" asp-route-id="@item.Id">Изменить</a></td></tr>
    }
</table>